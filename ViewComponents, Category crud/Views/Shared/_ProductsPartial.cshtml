@model IEnumerable<Product>

@foreach (var product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3" >
        <div class="product-item product-item-small text-center " >
            <div class="img">
                <a href="">
                    <img src="~/img/@product.Images.FirstOrDefault()?.Image" class="img-fluid" alt="">
                </a>
            </div>
            <div class="overlay d-flex flex-column justify-content-center">
                <div class="title mt-3">
                    <h6>@product.Name</h6>
                </div>
                <div class="price">
                    <span class="text-black-50">$@product.Price</span>
                </div>
                <div class="button mt-3">
                    <form method="post" data-id="@product.Id">
                      <button class="btn btn-danger rounded-0">Add to cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}